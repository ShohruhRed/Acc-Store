@model IEnumerable<Acc.Web.Models.ProductDto>


<br /> <br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1"> 
            <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus"></i>Create new product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Price
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td><a asp-action="EditProduct" class="btn btn-success" asp-route-productId="@item.ProductId"><i class="bi bi-pencil-square">
                    </i></a>
                    <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-productId="@item.ProductId"><i class="bi bi-trash">
                    </i></a></td>                     
                </tr>
            }
        </tbody>

    </table>
</div>

@{
}
